
<% if @bookmark.errors.any? %>
	<h2>The following errors prevented the Bookmark from being saved </h2>
	<ul>
		<% @bookmark.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<% end %>
	</ul>
<% end %>

<%= form_for @bookmark do |f|%>
	<p>
		<%= f.label :Bookmarkname %><br>
		<%= f.text_field :Bookmarkname %>
	</p>
	<p>
		<%= f.label :link %><br>
		<%= f.text_area :link %>
	</p>
	<p>
		<%= f.submit %>
	</p>
	<p><%= link_to "Back" , bookmarks_path(f) %></p>
<% end %>